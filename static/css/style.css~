	flex: 1;
}
/*
	blogpost: 
		base element for the post node
		max-width and min-width set
		positioned in order to set 'foot'
		margin 'auto' centers the elements
		margin 'bottom' to add space between
*/
.blogpost {
	background-color: #F3F3F3;
	box-shadow: 3px 3px 4px #888;
	max-width: 600px;
	margin: auto;
	margin-bottom: 35px;
	position: relative;
}
/*
	blogpost_head:
		goes on the top of every 'blogpost' element
		is a flexbox parent element, 
		display set accordingly; positioned
		children are 'blogpost_head-date' and 'head-title'
		min-height required to allow growth ('head-title')
*/
.blogpost_head {
	background-color: tan; 
	display: -webkit-flex;
	display: flex;
	min-height: 48px;
	width: 100%;
}
/*
	blogpost_head-date:
		first child to 'blogpost_head' and is also 
		a flexbox parent element, so that
		'head-date' children are centered
		both vertically and horizontally
		takes up 1/5 flexbox units
*/
.blogpost_head-date {
	background-color: #FF5050;
	color: white;
	display: -webkit-flex;
	display: flex;
	height: auto;
	min-height: 100%;
	text-align: center;
	/*flex*/
	-webkit-flex: 1;
	flex: 1;
	-webkit-align-items: center;
    	align-items: center;
	-webkit-justify-content: center;
    	justify-content: center;
}
/*
	blogpost_head-title:
		second child to 'blogpost_head' and is not
		a flexbox parent; height set to auto
		in order to grow with the content
		(see above 'blogpost_head')
		takes up 4/5 flexbox units
*/
.blogpost_head-title {
	background-color: #D9D9D9;
	display: flex;
	height: auto;
	min-height: 100%;
	padding-left: 12px;
	/*flex*/
	-webkit-flex: 4;
	flex: 4;
	-webkit-align-items: center;
    	align-items: center;
}
.blogpost_head-title a {
	color: black;
	text-decoration: none;
}
.blogpost_head-title a:hover {
	text-decoration: underline;
}
